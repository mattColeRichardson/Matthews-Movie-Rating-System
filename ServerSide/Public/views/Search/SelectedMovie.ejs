<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Movie Organizer so you don't forget your old fav's">
    <meta name="author" content="Matthew Richardson">
    <title>Move Search</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="../../fontawesome-free/css/all.css" rel="stylesheet">
    <link href="views/Home/index.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<section>
    <div class="container">
        <div class="card pt-4 pb-4 align-items-center">
            <div class="card text-center pt-2" style="width: 33%">
                <form action="/Search/RatingMovie/<%=_selResults.Title%>/1" method="POST">
                    <h1 class="card-title"><%=_selResults.Title%> </h1>
                    <div class="card-body">
                        <img src="<%=_selResults.Poster%>">
                        <p class="card-text">Year of release : <%=_selResults.Year%> & Type : <%=_selResults.Type%></p>
                        <h3>Describe your thoughts</h3>
                        <textarea class="form-control"></textarea>
                        <h3>Rate and Submit</h3>
                        <i class="far fa-star star" id="1"></i>
                        <i class="far fa-star star" id="2"></i>
                        <i class="far fa-star star" id="3"></i>
                        <i class="far fa-star star" id="4"></i>
                        <i class="far fa-star star" id="5"></i>
                        <div id="amount"></div>
                        <script>
                            $("#1").hover(function(){
                                $(this).removeClass("far").addClass("fas");
                            }, function(){
                                $(this).removeClass("fas").addClass("far");
                            });
                            $("#2").hover(function(){
                                $("#1").removeClass("far").addClass("fas");
                                $(this).removeClass("far").addClass("fas");
                            }, function(){
                                $('#1').removeClass("fas").addClass("far");
                                $(this).removeClass("fas").addClass("far");
                            });
                            $("#3").hover(function(){
                                $("#1").removeClass("far").addClass("fas");
                                $("#2").removeClass("far").addClass("fas");
                                $(this).removeClass("far").addClass("fas");
                            }, function(){
                                $('#1').removeClass("fas").addClass("far");
                                $('#2').removeClass("fas").addClass("far");
                                $(this).removeClass("fas").addClass("far");
                            });
                            $("#4").hover(function(){
                                $("#1").removeClass("far").addClass("fas");
                                $("#2").removeClass("far").addClass("fas");
                                $("#3").removeClass("far").addClass("fas");
                                $(this).removeClass("far").addClass("fas");
                            }, function(){
                                $('#1').removeClass("fas").addClass("far");
                                $('#2').removeClass("fas").addClass("far");
                                $("#3").removeClass("fas").addClass("far");
                                $(this).removeClass("fas").addClass("far");
                            });
                            $("#5").hover(function(){
                                $("#1").removeClass("far").addClass("fas");
                                $("#2").removeClass("far").addClass("fas");
                                $("#3").removeClass("far").addClass("fas");
                                $("#4").removeClass("far").addClass("fas");
                                $(this).removeClass("far").addClass("fas");
                            }, function(){
                                $('#1').removeClass("fas").addClass("far");
                                $('#2').removeClass("fas").addClass("far");
                                $("#3").removeClass("fas").addClass("far");
                                $("#4").removeClass("fas").addClass("far");
                                $(this).removeClass("fas").addClass("far");
                            });

                            $(".star").click(function(event){
                               $("#amount").text("You rated " + event.target.id + " stars");
                            });
                        </script>
                        <button type="submit" class="btn-primary">Rate me!!</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>