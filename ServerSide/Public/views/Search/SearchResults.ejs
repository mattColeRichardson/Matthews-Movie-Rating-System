<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Search Results: </title>
</head>
<body>
<nav class="navbar navbar-light bg-light static-top">
    <div class="container">
        <a class="navbar-brand" href="/">Matthew Richardson's Movie Organizer</a>
    </div>
</nav>
<section class="row">
    <% for(var i = 0; i < _movieResults.Search.length; i++) { %>
    <div class="card text-center pt-2" style="width: 33%">
        <form action="/Search/SelectedMovie/<%=_movieResults.Search[i].Title%>" method="POST">
            <h1 class="card-title"><%=_movieResults.Search[i].Title%> </h1>
            <div class="card-body">
                <img src="<%=_movieResults.Search[i].Poster%>">
                <p class="card-text">Year of release : <%=_movieResults.Search[i].Year%> & Type : <%=_movieResults.Search[i].Type%></p>
                <button type="submit" class="btn-primary">Rate me!!</button>
            </div>
        </form>
    </div>
    <% }%>
</section>
</body>
</html>